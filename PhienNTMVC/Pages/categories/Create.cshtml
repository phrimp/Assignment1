@page
@model PhienNTMVC.Pages.categories.CreateModel

@{
    ViewData["Title"] = "Create Category";
}

<h1>Create Category</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">New Category</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Category.CategoryName" class="form-label">Category Name</label>
                        <input asp-for="Category.CategoryName" class="form-control" required />
                        <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category.CategoryDesciption" class="form-label">Description</label>
                        <textarea asp-for="Category.CategoryDesciption" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Category.CategoryDesciption" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category.ParentCategoryId" class="form-label">Parent Category (Optional)</label>
                        <select asp-for="Category.ParentCategoryId" class="form-select" asp-items="Model.ParentCategorySelectList">
                            <option value="">-- None --</option>
                        </select>
                        <span asp-validation-for="Category.ParentCategoryId" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="Category.IsActive" class="form-check-input" />
                        <label asp-for="Category.IsActive" class="form-check-label">Active</label>
                        <span asp-validation-for="Category.IsActive" class="text-danger"></span>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}