@page
@model PhienNTMVC.Pages.news.DeleteModel
@{
    ViewData["Title"] = "Delete News Article";
}

<div class="container mt-4">
    <h1>Delete News Article</h1>

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this news article?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Article Details</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h2>@Model.NewsArticle.NewsTitle</h2>

                    @if (!string.IsNullOrEmpty(Model.NewsArticle.Headline))
                    {
                        <p class="fw-bold">@Model.NewsArticle.Headline</p>
                    }

                    <p class="text-muted">
                        Category: <span class="badge bg-secondary">@Model.NewsArticle.Category.CategoryName</span>
                    </p>

                    <p class="text-muted">
                        Status: <span class="badge bg-info">@Model.NewsArticle.NewsStatus</span>
                    </p>

                    <p class="text-muted">
                        Created by @Model.NewsArticle.CreatedBy.AccountName on @Model.NewsArticle.CreatedDate.ToString("MMM dd, yyyy")
                    </p>

                    @if (Model.NewsArticle.UpdatedById.HasValue)
                    {
                        <p class="text-muted">
                            Last updated by @Model.NewsArticle.UpdatedBy.AccountName on @Model.NewsArticle.ModifiedDate?.ToString("MMM dd, yyyy")
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>

    <form method="post">
        <input type="hidden" asp-for="NewsArticle.NewsArticleId" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="d-flex">
            <button type="submit" class="btn btn-danger me-2">Delete</button>
            <a asp-page="./Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>